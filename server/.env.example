# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/habit-tracker
# For MongoDB Atlas (cloud):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/habit-tracker?retryWrites=true&w=majority

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# Firebase Configuration (for Firebase Authentication)
# Get this from Firebase Console > Project Settings > Project ID
FIREBASE_PROJECT_ID=your-firebase-project-id
# Optional: For production, use service account JSON (stringify the entire JSON object)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"..."}

# CORS
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
